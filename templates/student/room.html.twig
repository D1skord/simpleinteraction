{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      {% for task in tasks %}
        <div class="col-sm-4 pt-3">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><a href="{{ path('student_task', {'roomId': room.id, 'taskId': task.id}) }}">{{ task.name }}</a></h5>
            </div>
          </div>
        </div>

      {% endfor %}
    </div>
  </div>



{% endblock %}
