{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
  <div class="container">
    <div class="row">
      {% for room in rooms %}
        <div class="col-sm-4 pt-3">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><a href="">{{ room.name }}</a></h5>
              <a href="#" class="btn btn-warning">Редактировать</a>
              <a href="{{ path('teacher_rooms_delete', {'roomId': room.id}) }}" class="btn btn-danger">Удалить</a>
            </div>
          </div>
        </div>

      {% endfor %}
    </div>
  </div>



  {{ form_start(addForm) }}
  {{ form_row(addForm.name) }}
  <button class="btn btn-primary">Добавить</button>
  {{ form_end(addForm) }}
{% endblock %}
